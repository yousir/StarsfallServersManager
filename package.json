{
  "name": "starsfall-servers-manager",
  "displayName": "Starsfall Servers Manager",
  "description": "A VS Code extension to manage multiple Linux servers.",
  "version": "1.0.1",
  "publisher": "starsfall",
  "repository": {
    "type": "git",
    "url": "https://github.com/yystarsfall/StarsfallServersManager.git"
  },
  "license": "MIT",
  "keywords": [
    "linux",
    "server",
    "ssh",
    "remote",
    "management"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "starsfall.connectServer",
        "title": "Starsfall: Connect Linux Server"
      },
      {
        "command": "starsfall.editServer",
        "title": "Starsfall: Edit Linux Server"
      },
      {
        "command": "starsfall.removeServer",
        "title": "Starsfall: Remove Linux Server"
      },
      {
        "command": "starsfall.disconnectAll",
        "title": "Starsfall: Disconnect All"
      },
      {
        "command": "starsfall.shutdownAll",
        "title": "Starsfall: Shutdown All"
      },
      {
        "command": "starsfall.focusServersExplorer",
        "title": "Starsfall: Focus Servers Explorer"
      },
      {
        "command": "starsfall.uploadFile",
        "title": "Starsfall: Upload File",
        "when": "resourceLangId == 'plaintext'"
      },
      {
        "command": "starsfall.downloadFile",
        "title": "Starsfall: Download File",
        "when": "resourceLangId == 'plaintext'"
      },
      {
        "command": "starsfall.openFile",
        "title": "Starsfall: Open File",
        "when": "resourceLangId == 'plaintext'"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "serversExplorer",
          "title": "Servers Explorer",
          "icon": "resources/icons/starsfallServers.svg"
        }
      ]
    },
    "views": {
      "serversExplorer": [
        {
          "id": "serversList",
          "name": "Servers",
          "icon": "resources/icons/starsfallServers.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack",
    "watch": "webpack --watch",
    "compile": "tsc -p .",
    "test": "npm run compile && node ./dist/test/runTest.js",
    "test:report": "cross-env MOCHA_REPORTER=mocha-junit-reporter MOCHA_REPORTER_OPTIONS=\"{\\\"mochaFile\\\":\\\"test-results/junit.xml\\\"}\" npm run test",
    "install:cn": "npm install --registry=https://registry.npmmirror.com --no-package-lock",
    "install:official": "npm install --registry=https://registry.npmjs.org",
    "postinstall": "node -e \"if (process.env.CI) { console.log('Running in CI environment, using official registry'); } else { console.log('\\n\\x1b[33m建议国内用户使用 \\x1b[1mnpm run install:cn\\x1b[0m\\x1b[33m 命令以提高安装速度\\x1b[0m\\n'); }\""
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/ssh2": "^1.15.5",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.0.1",
    "cross-env": "^10.0.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "mocha-junit-reporter": "^2.2.1",
    "node-loader": "^2.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "ssh2": "^1.17.0"
  }
}
